                                                        <option value="Data Science">Data Science</option>
                                                        <option value="Data Analytics">Data Analytics</option>
                                                        <option value="Investment Banking">Investment Banking </option>
                                                        <option value="Digital Marketing">Digital Marketing</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="country-code">

                                            <span class="phoneCodeId">+91</span>
                                            <div class="form-control">
                                                <input name="personPhone" type="tel" aria-label="tel" class="hmobile" placeholder="Phone Number*" value=""><div class="floating-label_border"></div>
                                            </div>
                                        </div>
                                        <div class="linkedn-url">
                                            <div class="form-control">
                                                <input name="linkednUrl" type="text" aria-label="text" class="hlinkedin" placeholder="Linkedn URL*" value=""><div class="floating-label_border"></div>
                                            </div>
                                        </div><div></div><div class="hide">
                                            <div class="form-control">
                                                <input name="requiredValidations" type="hidden" aria-label="hidden" value="true">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn" id="b2b-form-submit">SUBMIT</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
